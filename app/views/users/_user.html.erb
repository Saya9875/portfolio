<li class="container mx-auto max-w-sm flex flex-col space-y-4 justify-center items-center">
  <div class="flex items-center space-x-4">
    <%= link_to image_tag(user.display_avatar, class: "rounded-full h-20 w-20 object-cover"), user %>
  </div>
  <div class="flex-grow p-3">
    <div class="font-semibold text-gray-700">
    <%= link_to user.name, user %>
  </div>
    </div>
    <div class="text-sm text-gray-500">
    <%= link_to user.profile, user %>
  </div>
  <% if current_user.admin? %>
    <%= link_to "削除", user, method: :delete, data: { confirm: "本当にこのユーザーを削除してよろしいですか?" } %>
  <% end %>
</li>